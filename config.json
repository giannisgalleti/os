        "zoomLevel": 1
      },
      "kitty": {
        "hideDecorations": true
      },
      "firefox": {
        "enable": false,
        "overrides": false,
        "privacy": false,
        "pwas": [
          "https://app.tuta.com",
          "https://develop.element.io"
        ]
      },
      "librewolf": {
        "enable": true,
        "overrides": false,
        "privacy": false,
        "pwas": []
      },
      "nvchad": false,
      "steam": {
        "beta": true,
        "downloadsWorkaround": true,
        "session": {
          "enable": false,
          "autoStart": {
            "enable": false,
            "desktopSession": "hyprland"
          }
        }
      },
      "sunshine": true,
      "emulators": {
        "switch": false,
        "wiiu": false
      }
    },
    "bootloader": {
      "animation": false,
      "grub": {
        "enable": false,
        "device": "/dev/sda"
      },
      "systemd-boot": {
        "enable": true,
        "mountPoint": "/boot"
      }
    },
    "desktop": {
      "autologin": {
        "enable": true,
        "user": "giannis"
      },
      "gdm": {
        "enable": true,
        "autoSuspend": true
      },
      "gnome": {
        "enable": true,
        "extensions": {
          "arcmenu": true,
          "dashToPanel": true,
          "gsconnect": false
        },
        "clock": {
          "date": true,
          "weekday": true
        },
        "hotCorners": false,
        "powerButtonAction": "interactive",
        "startupItems": true,
        "titlebarLayout": "appmenu:minimize,maximize,close",
        "workspaces": {
          "dynamicWorkspaces": false,
          "maxWorkspaces": 1
        }
      },
      "hyprland": {
        "enable": false,
        "backlight": "amdgpu_bl0",
        "lock": {
          "secondsToLowerBrightness": 60,
          "cpuUsageThreshold": 60,
          "diskUsageThreshold": 10,
          "networkUsageThreshold": 1000000
        }
      }
    },
    "hardware": {
      "btrfs": {
        "compression": {
          "enable": true,
          "mounts": true,
          "root": true
        }
      },
      "cpus": {
        "amd": {
          "enable": true,
          "undervolt": {
            "enable": false,
