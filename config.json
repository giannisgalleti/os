    "applications": {
      "android-tools": true,
      "brave": false,
      "codium": {
        "enable": true,
        "extensions": [
          "codezombiech.gitignore",
          "dbaeumer.vscode-eslint",
          "donjayamanne.githistory",
          "eamodio.gitlens",
          "editorconfig.editorconfig",
